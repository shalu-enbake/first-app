<div class="col-sm-12">
	<%= form_tag('/books', method: :get, remote: true) do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "search", :title => nil %>
	<% end %>
	<div id="books">
		<%= render partial: "books", locales: {books: @books} %>
	</div>
	<%= link_to "Create", new_book_path %>
</div>
